{% extends "base.html.twig" %}
{% form_theme form with ['Form/artisan_prototype.html.twig'] %}

{% block body %}
    {% include 'Receipt/headReceiptForm.html.twig' %}
    <div class="tickets" data-prototype="{{ form_widget(form.tickets.vars.prototype)|e('html_attr') }}">
        {% for item in form.tickets %}
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        {{ form_row(item.ticket, {'value':item.vars.value.ticket, 'disabled':'disabled'}) }}
                        <input type="hidden" name="receipt[tickets][{{ loop.index0 }}][ticket]" value="{{ item.vars.value.ticket }}">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        {{ form_row(item.amount) }}
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        {{ form_row(item.artist, {'value':item.vars.value.artist.lastName~', '~item.vars.value.artist.firstName }) }}
                    </div>
                </div>
                    <div class="col-sm-1"><br>
                        <a href="#" class="btn-sm btn-warning" style="text-decoration: none;">Delete</a>
                </div>
            </div>
        {% endfor %}
    </div>
    {% include 'Receipt/tailReceiptForm.html.twig' %}
{% endblock body %}
{%  block javascripts %}
    {{ parent() }}
    <script src="/js/bootstrap-datepicker.js"></script>
    <script src="/js/tickets.js"></script>
{%  endblock javascripts %}
