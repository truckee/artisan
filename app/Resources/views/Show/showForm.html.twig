        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            {{ form_row(form.percent) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 text-center">
            {{ form_row(form.default) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            {{ form_row(form.save, {'label': action}) }}{{ form_rest(form) }}
