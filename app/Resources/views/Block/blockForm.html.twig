{% extends "base.html.twig" %}
{% block body %}
    <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
            <div class="panel panel-primary">
                <div class="panel-heading"><h4>{{ action }} block for {{ artist.firstName~' '~artist.lastName }}</h4></div>
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_row(form.lower) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_row(form.upper) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4">
                            {{ form_row(form.save, {'label': action}) }}{{ form_rest(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}

