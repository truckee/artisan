{% extends "base.html.twig" %}
{% block body %}
    <div class="panel panel-primary">
        <div class="panel-heading"><h4>{{ action }}</h4></div>
        <div class="panel-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-sm-3">
                    {{ form_row(form.firstName) }}
                </div>
                <div class="col-sm-3">
                    {{ form_row(form.lastName) }}
                </div>
                <div class="col-sm-3">
                    {% if form.inShow is defined %}<b>In show?</b>{{ form_row(form.inShow) }}{% endif %}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    {{ form_row(form.address) }}
                </div>
                <div class="col-sm-2">
                    {{ form_row(form.city) }}
                </div>
                <div class="col-sm-1">
                    {{ form_row(form.state) }}
                </div>
                <div class="col-sm-2">
                    {{ form_row(form.zip) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-sm-3">
                    {{ form_row(form.phone) }}
                </div>
                <div class="col-sm-3">
                    {{ form_row(form.dba) }}
                </div>
                <div class="col-sm-3">
                    {{ form_row(form.tax_id) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <b>Vendor?</b> {{ form_row(form.vendor) }}
                </div>
                <div class="col-sm-2">
                    <b>Confirmed?</b> {{ form_row(form.confirmed) }}
                </div>
                <div class="col-sm-2">
                    <b>Tax form?</b> {{ form_row(form.tax_form) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    {{ form_row(form.save, {'label': action}) }}{{ form_rest(form) }}
                </div>
            </div>
        </div></div>
    {% endblock body %}

