<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="{{ absolute_url(asset('css/bootstrap.css')) }}" rel="stylesheet">
        <link href="{{ absolute_url(asset('css/pdf.css')) }}" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            {% for key, data in showArtists %}
                <div class="new_page"></div>
                <div class="text-center text-info"><h3><span id="ticketHeader">Tickets for {{ data.artist.firstName~' '~data.artist.lastName }}</span></h3></div>
                {% include 'Artist/artistTicketsHeader.html.twig' %}
                {% set total = 0 %}{% set taxTotal = 0 %}
                {% for ticket in data.tickets %}
                    <div class="row">
                        <div class="col-xs-2"></div>
                        <div class="col-xs-1 text-right">
                            {{ ticket.ticket|number_format(0, '', '') }}
                        </div>
                        <div class="col-xs-1 text-right">
                            {{ ticket.receiptNo|number_format(0, '', '') }}
                        </div>
                        <div class="col-xs-2 text-right">
                            {{ ticket.amount|number_format(2) }}
                        </div>
                        <div class="col-xs-2 text-right">
                            {{ (ticket.amount*show.tax)|number_format(2) }}
                        </div>
                        <div class="col-xs-2 text-right">
                            {#- sums -#}{%- set taxTotal = taxTotal + ticket.amount * show.tax -%}
                            {%-  set total = total + ticket.amount -%}
                        </div>
                    </div>    {% endfor  %}
                    <div class="row">
                        <div class="col-xs-3"></div>
                        <div class="col-xs-1 text-right">
                            Total
                        </div>
                        <div class="col-xs-2 text-right">
                            {{ total|number_format(2) }}
                        </div>
                        <div class="col-xs-2 text-right">
                            {{ taxTotal|number_format(2) }}
                        </div>
                        <div class="col-xs-2 text-right" style="padding-bottom: 10px;">
                            {{ '$'~(total + taxTotal)|number_format(2) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4"></div>
                        <div class="col-xs-1">
                            Distribution
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4"></div>
                        <div class="col-xs-1">
                            Artist
                        </div>
                        <div class="col-xs-1 text-right">
                            {{ '$'~(total*(1-show.percent))|number_format(2, '.', ',') }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4"></div>
                        <div class="col-xs-1">
                            UUFNN
                        </div>
                        <div class="col-xs-1 text-right">
                            {{ '$'~(total*show.percent)|number_format(2, '.', ',') }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </body>
    </html>